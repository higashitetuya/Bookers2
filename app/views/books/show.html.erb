<% if flash[:notice] %>
  <div class="flash">
    <%= flash[:notice] %>
  </div><br>
<% end %>

<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'users/list', user: @user %>
      <%= render 'books/list', book: @book_new %>
    </div>
      <div class="col-md-8 offset-md-1">
        <h2>Book detail</h2>
        <table class="table table-striped">
          <tr>
            <td><%= link_to user_path(@book.user.id) do %><div class="text-center"><%= attachment_image_tag @book.user, :profile_image, :size => '50x50', fallback: "no_image.jpg"%><% end %><br>
              <p><%= link_to user_path(@book.user.id) do %><%= @book.user.name %></div><% end %></p></td>
            <td><p><%= link_to book_path do %><%= @book.title %><% end %></p></td>
            <td><p><%= @book.body %></p></td>
            <td><% if @book.user == current_user %>
              <%= link_to 'Edit', edit_book_path, class: "btn btn-success" %></td>
              <% end %>
            <td><% if @book.user == current_user %>
              <%= link_to "Destroy", book_path(@book), class: "btn btn-danger",  method: :delete, "data-confirm" => "本当に消しますか？" %></td>
            <% end %>
          </tr>
        </table>
    </div>
  </div>
</div>