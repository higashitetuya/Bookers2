<h2>New book</h2>

  <%= form_with model: book, local:true do |f| %>

    <p>Title</p>
    <%= f.text_field :title %>

    <p>Opinion</p>
    <%= f.text_area :body, cols: 23 %>
    <br>

    <div class="form_group pt-2 pb-2">
    <%= f.submit 'Create Book', class: "btn btn-success" %>
    </div>

  <% end %>
