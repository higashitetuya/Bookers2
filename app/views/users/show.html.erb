
<% if flash[:notice] %>
  <div class="flash">
    <div class="notification is-info">
    <p class="notice"><font color="green"><%= notice %></font></p>
  </div>
<% end %>
<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'users/list', user: @user %>
      <%= render 'books/list', book: @book_new %>
    </div>
    <div class="col-md-8 offset-md-1">
    <h2>Books</h2>
      <table class="table table-sm">
        <tr>
          <th>　　　</th>
          <th>Title</th>
          <th>Opinion</th>
        </tr>
        <% @books.each do |books| %>
        <tr>
          <td><%= link_to user_path(books.user.id) do %><%= attachment_image_tag books.user, :profile_image, :size => '50x50', fallback: "no_image.jpg"%><% end %></td>
          <td><p><%= link_to book_path(books.id) do %><%= books.title %><% end %></p></td>
          <td><p><%= books.body %></p></td>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>
