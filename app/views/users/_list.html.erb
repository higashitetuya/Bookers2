<h2>User info</h2>
<%= attachment_image_tag user, :profile_image, :size => '100x100', fallback: "no_image.jpg"%>

<table class="table table-sm">
  <tr>
    <th>name</th><td><%= user.name %></td>
  </tr>
  <tr>
    <th>introduction</th><td><%= user.introduction %></td>
  </tr>
</table>

<div class="form_group pt-0 pb-2">
  <%= link_to edit_user_path(user.id), :class => 'btn btn-secondary w-100', :method => :get do %>
  <i class="fas fa-user-cog "></i><% end %><br>
</div>
