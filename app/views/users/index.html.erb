<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= render 'users/list', user: current_user %>
      <%= render 'books/list', book: @book_new %>
    </div>
    <div class="col-md-8 offset-md-1">
    <h2>Users</h2>
      <table class="table table-sm">
        <tr>
          <th>image</th>
          <th>name</th>
          <th></th>
        </tr>
      <% @users.each do |users| %>
        <tr>
          <td><%= attachment_image_tag users, :profile_image, :size => '50x50', fallback: "no_image.jpg"%></td>
          <td><p><%= users.name %></p></td>
          <td><%= link_to "Show", user_path(users.id) %></td>
        </tr>
      <% end %>
      </table>
    </div>
  </div>
</div>